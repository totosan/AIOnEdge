{
  "moduleContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "registryName": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "$CONTAINER_REGISTRY_ADDRESS"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": ""
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": ""
            }
          }
        },
        "modules": {
          "camera-capture": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "env": {
              "VIDEO_PATH": { "value": "./AppleAndBanana.mp4"},
              "IMAGE_PROCESSING_ENDPOINT": { "value": "http://image-classifier-service:80/image"},
              "VERBOSE": { "value": "True"},
              "RESIZE_WIDTH": { "value": 256},
              "RESIZE_HEIGHT": { "value": 256},
              "SHOW_VIDEO": { "value": "True"}
            },
            "settings": {
              "image": "${MODULES.CameraCapture.test-amd64}",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5012/tcp": [ { "HostPort":"5012"}]
                  }
                }
              }
            }
          },
          "image-classifier-service": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.ImageClassifierService.amd64}",
              "createOptions": ""
            }
          },
          "Blink": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Blink.amd64.debug}",
              "createOptions": {
                "HostConfig": {
                  "Privileged": true,
                  "Devices": [
                    {
                      "PathOnHost": "/dev/gpiomem",
                      "PathInContainer": "/dev/gpiomem",
                      "CgroupPermissions": "rwm"
                    },
                    {
                      "PathOnHost": "/dev/mem",
                      "PathInContainer": "/dev/mem",
                      "CgroupPermissions": "rwm"
                    }
                  ],
                  "Mounts": [
                    {
                      "Type": "bind",
                      "Source": "/lib/modules/",
                      "Target": "/lib/modules/"
                    }
                  ]
                }
              }
            }
          },
          "EvaluateImage": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.EvaluateImage.amd64.debug}",
              "createOptions": {}
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "CameraCaptureToFct": "FROM /messages/modules/camera-capture/outputs/* INTO BrokeredEndpoint(\"/modules/EvaluateImage/inputs/input1\")",
          "CameraCaptureToFct": "FROM /messages/modules/camera-capture/outputs/* INTO BrokeredEndpoint(\"/modules/Blink/inputs/input1\")",
          "EvaluateImageToIoTHub": "FROM /messages/modules/EvaluateImage/outputs/* INTO $upstream"          
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}
